{% extends 'base.html.twig' %}

{% block body %}
<br>
<!-- banner -->
<div id="slidey" style="display:none;">
		<ul>
			{% for lesfilms in lesFilms %}
			<li>
          <img src="{{ asset('Images/films/' ~ lesfilms.imgFilm) }}" height="40px" width="40px" alt=" ">
          <p class='title'>{{ lesfilms.nomFilm }}</p>
          <p class='description'>{{ lesfilms.synopsisFilm }}</p>
      </li>
			{% endfor %}
		</ul>   	
    </div>
    <script src="{{ asset('css/Styles/vendelais-css/js/jquery.slidey.js') }}"></script>
    <script src="{{ asset('css/Styles/vendelais-css/js/jquery.dotdotdot.min.js') }}"></script>
	   <script type="text/javascript">
			$("#slidey").slidey({
				interval: 8000,
				listCount: 5,
				autoplay: false,
				showList: true
			});
			$(".slidey-list-description").dotdotdot();
		</script>
<!-- //banner -->
<!-- banner-bottom -->
<div class="banner-bottom">
		<div class="container">
			<div class="w3_agile_banner_bottom_grid">
				<div id="owl-demo" class="owl-carousel owl-theme">
					{% for lesfilms in lesFilms %}
					<div class="item">
						<div class="w3l-movie-gride-agile w3l-movie-gride-agile1">
						<a href="{{path('film_single', {'id': lesfilms.id}) }}" class="hvr-shutter-out-horizontal"><img src="{{ asset('Images/films/' ~ lesfilms.imgFilm) }}" title="album-name" class="img-responsive" alt=" " />
								<div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
							</a>
							<div class="mid-1 agileits_w3layouts_mid_1_home">
								<div class="w3l-movie-text">
								<h6><a href="{{ path('film_index', {'genre': lesfilms.genreFilm}) }}">{{ lesfilms.nomFilm }}</a></h6>							
								</div>
								<div class="mid-2 agile_mid_2_home">
									<p>{{ lesfilms.dateSortie|date('Y') }}</p>
									<div class="block-stars">
										<ul class="w3l-ratings">
											<li>{{ nbEtoile(lesfilms.noteFilm)|raw }}</li>
										</ul>
									</div>
									<div class="clearfix"></div>
								</div>
							</div>
						</div>
					</div>
								{% endfor %}
				</div>
			</div>			
		</div>
	</div>
<!-- //banner-bottom -->

<!-- general -->
<div class="general">
		<h4 class="latest-text w3_latest_text">Films à l'affiche</h4>
		<div class="container">
		<div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
				<ul id="myTab" class="nav nav-tabs" role="tablist">
					<li role="presentation"><a href="" aria-expanded="true">En vedette</a></li>
					<li role="presentation"><a href="" aria-expanded="false">Les plus regardés</a></li>
					<li role="presentation"><a href="" aria-expanded="true">Les mieux notés</a></li>
					<li role="presentation"><a href="" aria-expanded="false">Ajoutés récemment</a></li>
				</ul>
				<div id="myTabContent" class="tab-content">
					<div role="tabpanel" class="tab-pane fade active in" id="home" aria-labelledby="home-tab">
						<div class="w3_agile_featured_movies">
								{% for lesfilms in lesFilms %}
							<div class="col-md-2 w3l-movie-gride-agile">
								<a href="{{path('film_single', {'id': lesfilms.id}) }}" class="hvr-shutter-out-horizontal">
                  					<img src="{{ asset('Images/films/' ~ lesfilms.imgFilm) }}" title="{{ lesfilms.nomFilm }}" class="img-responsive" alt=" " />
									<div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
								</a>
								<div class="mid-1 agileits_w3layouts_mid_1_home">
									<div class="w3l-movie-text">
										<h6><a href="{{path('film_single', {'id': lesfilms.id}) }}">{{ lesfilms.nomFilm }}</a></h6>
									</div>
									<div class="mid-2 agile_mid_2_home">
										<p>{{ lesfilms.dateSortie|date('Y') }}</p>
										<div class="block-stars">
											<ul class="w3l-ratings">
												<li>{{ nbEtoile(lesfilms.noteFilm)|raw }}</li>
											</ul>
										</div>
										<div class="clearfix"></div>
									</div>
								</div>
							</div>
								{% endfor %}
						</div>
				</div>
			</div>
		</div>
	</div>
<!-- //general -->
<!-- Latest-tv-series -->
<div class="Latest-tv-series">
		<h4 class="latest-text w3_latest_text w3_home_popular">Films les plus populaires</h4>
		<div class="container">
			<section class="slider">
				<div class="flexslider">
					<ul class="slides">
						<li>
							<div class="agile_tv_series_grid">
								<div class="col-md-6 agile_tv_series_grid_left">
									<div class="w3ls_market_video_grid1">
								 {% for unfilm in unFilm %}
										<img src="{{ asset('Images/petiteTaille/' ~ unfilm.imgFilm) }}" />
										<a class="w3_play_icon" href="#small-dialog">
											<span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
										</a>
								 {% endfor %}
									</div>
								</div>
								<div class="col-md-6 agile_tv_series_grid_right">
									{% for unfilm in unFilm %}
									<p class="fexi_header">{{ unfilm.nomFilm }}</p>
									<p class="fexi_header_para"><span class="conjuring_w3">Scénario <label>:</label></span>{{ unfilm.synopsisFilm }}</p>
									<p class="fexi_header_para"><span>Date réalisation <label>:</label></span>{{ unfilm.dateSortie|date('d/m/Y') }}</p>
									<p class="fexi_header_para">
										<span>Genre<label>:</label> </span>
										<a>{{ unfilm.genreFilm }}</a>
									</p>
									<p class="fexi_header_para fexi_header_para1"><span>Note<label>:</label></span>
										{{ nbEtoile(unfilm.noteFilm)|raw }}
									</p>
									{% endfor %}
								</div>
								<div class="clearfix"> </div>
								</div>
							</div>
						</li>
					</ul>
				</div>				
      		</section>
      <!-- flexSlider -->
				<link rel="stylesheet" href="{{ asset('css/Styles/vendelais-css/flexslider.css') }}" type="text/css" media="screen" property="" />
				<script defer src="{{ asset('css/Styles/vendelais-css/js/jquery.flexslider.js') }}"></script>
				<script type="text/javascript">
				$(window).load(function(){
				  $('.flexslider').flexslider({
					animation: "slide",
					start: function(slider){
					  $('body').removeClass('loading');
					}
				  });
				});
			  </script>
			<!-- //flexSlider -->
		</div>
  </div>
  <!-- pop-up-box -->  
		<script src="{{ asset('css/Styles/vendelais-css/js/jquery.magnific-popup.js') }}" type="text/javascript"></script>
	<!--//pop-up-box -->
	<div id="small-dialog" class="mfp-hide">
		<iframe src="https://player.vimeo.com/video/164819130?title=0&byline=0"></iframe>
	</div>
	<div id="small-dialog1" class="mfp-hide">
		<iframe src="https://player.vimeo.com/video/148284736"></iframe>
	</div>
	<div id="small-dialog2" class="mfp-hide">
		<iframe src="https://player.vimeo.com/video/165197924?color=ffffff&title=0&byline=0&portrait=0"></iframe>
	</div>
	<script>
		$(document).ready(function() {
		$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
			type: 'inline',
			fixedContentPos: false,
			fixedBgPos: true,
			overflowY: 'auto',
			closeBtnInside: true,
			preloader: false,
			midClick: true,
			removalDelay: 300,
			mainClass: 'my-mfp-zoom-in'
		});
																		
		});
	</script>
<!-- //Latest-tv-series -->

{% endblock %}
