{% extends 'base.html.twig' %}

{% block body %}
<!-- single -->
<div class="single-page-agile-main">
	<div class="container">
		<!-- /w3l-medile-movies-grids -->
			<div class="agileits-single-top">
				<ol class="breadcrumb">
				  <li><a href="{{ path('accueil_film') }}">Accueil</a></li>
				  <li class="active">Film</li>
				  <li class="active">{{ unFilmSeul.nomFilm }}</li>
				</ol>
			</div>
			<div class="single-page-agile-info">
                   <!-- /movie-browse-agile -->
                    <div class="show-top-grids-w3lagile">
						<div class="col-sm-8 single-left">
							<div class="song">
								<div class="song-info">
									<h3>{{ unFilmSeul.nomFilm }}</h3>
								</div>
								<div class="video-grid-single-page-agileits">
									<a href="" class="hvr-shutter-out-horizontal"><img src="{{ asset('Images/films/' ~ unFilmSeul.imgFilm) }}" alt="" class="img-responsive" /> </a>
								</div><br>
								<b>Scénario :</b><p> {{ unFilmSeul.synopsisFilm }}</p><br>
								<b>Réalisateur(s) :</b><p> {{ unFilmSeul.realisateurFilm }}</p><br>
								<b>Date sortie :</b><p> {{ unFilmSeul.dateSortie|date('d/m/Y') }}</p><br><br>
								<a href="{{ path('add_panier', {'id': unFilmSeul.id}) }}" class="btn btn-success"><i class="fas fa-cart-plus"></i> Ajouter</a>
							</div>
						</div>
						<div class="col-md-4 single-right">
							<h3>Films à suivre</h3>
							<div class="single-grid-right">
								{% for lesfilmsdroits in lesFilms %}
									<div class="single-right-grids">
										<div class="col-md-4 single-right-grid-left">
											<a href="{{path('film_single', {'id': lesfilmsdroits.id}) }}" class="hvr-shutter-out-horizontal"><img src="{{ asset('Images/films/' ~ lesfilmsdroits.imgFilm) }}" title="album-name" class="img-responsive" alt=" " />
										</div>
										<div class="col-md-8 single-right-grid-right">
											<a href="{{path('film_single', {'id': lesfilmsdroits.id}) }}">{{ lesfilmsdroits.nomFilm }}</a>
											<p class="author"><a href="" class="author">{{ lesfilmsdroits.realisateurFilm }}</a></p>
											<p>{{ lesfilmsdroits.dateSortie|date('d/m/Y') }}</p>
										</div>
										<div class="clearfix"> </div>
									</div>
								{% endfor %}
							</div>
						</div>
						<div class="clearfix"> </div>

					</div>			
				<div class="clearfix"> </div>
			</div>
				<!-- //movie-browse-agile -->
			
				<!-- //w3l-latest-movies-grids -->
	</div>
</div>
	<!-- //w3l-medile-movies-grids -->
{% endblock %}