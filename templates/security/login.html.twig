{% extends 'base.html.twig' %}

{% block title %}<title>Connexion</title>{% endblock %}

{% block body %}
<form class="register-form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <br>
    <h1 class="h3 mb-3 font-weight-normal">Formulaire de connexion</h1><br>
    <label for="inputEmail">E-mail</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <br>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" style="background-color: #FF8D1B; border-color: #FF8D1B;" type="submit">
        Se connecter
    </button>
    <a href="{{path('app_forgot_password')}}">Mot de passe oubli√© ?</a><br><br>
    Pas encore inscrit ? <a href="{{path('app_register')}}">S'inscrire</a>
</form>
<br>
{% endblock %}